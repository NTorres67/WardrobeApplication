<link href="~/Content/TopsDetails.css" rel="stylesheet" />

@model WardrobeApplication.Models.Top

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col">
        <p class="table-header">
            Top Information
        </p>
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="thumbnail details-index">
                <div class="caption details-index">

                    <p class="description">
                        @Html.DisplayFor(modelItem => item.TopName)
                    </p>
                    @Html.DisplayNameFor(model => model.TopPhoto) : @Html.DisplayFor(model => model.TopPhoto)

                        <p>
                            @Html.DisplayNameFor(model => model.TopColor) : @Html.DisplayFor(model => model.TopColor)
                        </p>
                        <p>
                            @Html.DisplayNameFor(model => model.TopType) :  @Html.DisplayNameFor(model => model.TopType)
                        </p>
                        <p>
                            @Html.DisplayNameFor(model => model.Season.SeasonName) :  @Html.DisplayFor(model => model.Season.SeasonName)
                        </p>
                        <p>
                            @Html.DisplayNameFor(model => model.Occasion.OccasionName) : @Html.DisplayFor(model => model.Occasion.OccasionName)
                        </p>


                        <p class="links">
                            @Html.ActionLink("Edit", "Edit", new { id = Model.TopID }) |
                            @Html.ActionLink("Back to List", "Index")
                        </p>
                </div>
            </div>
        </div>
    }
</div>


<div>
    <h4>Top</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TopName)
        </dt>

